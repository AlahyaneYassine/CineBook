<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cinebook.demo1.ui.controller.LoginController"
      styleClass="card"
      style="-fx-padding: 40; -fx-max-width: 450;">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="CineBook" styleClass="h1" style="-fx-text-alignment: center;"/>

    <VBox spacing="16" style="-fx-padding: 0;">
        <TextField fx:id="usernameField" promptText="Username" styleClass="text-field"/>
        <PasswordField fx:id="passwordField" promptText="Mot de passe" styleClass="password-field"/>
    </VBox>

    <VBox spacing="10" alignment="CENTER">
        <Button text="Se connecter" onAction="#onLogin" styleClass="btn-primary" style="-fx-pref-width: 200;"/>
        <Button text="CrÃ©er un compte" onAction="#onSignup" styleClass="btn-secondary" style="-fx-pref-width: 200;"/>
    </VBox>

    <Label fx:id="messageLabel" styleClass="error" style="-fx-text-alignment: center; -fx-wrap-text: true;"/>

</VBox>
